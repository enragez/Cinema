@page
@model Cinema.Pages.FilmSessions.ViewModel

@{
    ViewData["Title"] = "Сеансы";
}

<style>
    img {
        max-width: 100%;
        max-height: 100%;
    }
        
    .film-name {
        font-size: 24px;
        font-weight: 700;
    }
</style>

<div class="row">
    <div class="col-md-2 d-flex justify-content-center">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Film.Poster)" alt="@Model.Film.Name"/>
    </div>
    <div class="col-md-4">
        <div class="film-name">@Model.Film.Name</div>
        <div>Жанр: @Model.Film.Genre</div>
        <div>Длительность: @Model.Film.Duration минут</div>
        <div>Режиссер: @Model.Film.Director</div>
    </div>
</div>

<table class="table" style="margin-top: 16px">
    <thead>
    <tr>
        <th>Зал</th>
        <th>Время</th>
        <th>Цена</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.FilmSessions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) рублей
            </td>
            <td>
                <a asp-page="./Book" asp-route-id="@item.Id">Забронировать</a> |
                <a asp-page="./Buy" asp-route-id="@item.Id">Купить</a>
            </td>
        </tr>
    }
    </tbody>
</table>