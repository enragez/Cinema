@page
@model Cinema.Pages.Films.CreateModel

@{
    ViewData["Title"] = "Добавить фильм";
}

<h1>Добавить фильм</h1>

<h4>Фильм</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="FilmModel.Name" class="form-control" />
                <label asp-for="FilmModel.Name"></label>
                <span asp-validation-for="FilmModel.Name" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 8px">
                <input asp-for="FilmModel.Genre" class="form-control" />
                <label asp-for="FilmModel.Genre" ></label>
                <span asp-validation-for="FilmModel.Genre" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 8px">
                <input asp-for="FilmModel.Director" class="form-control" />
                <label asp-for="FilmModel.Director" ></label>
                <span asp-validation-for="FilmModel.Director" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 8px">
                <input type="date" asp-for="FilmModel.Date" class="form-control" />
                <label asp-for="FilmModel.Date"></label>
                <span asp-validation-for="FilmModel.Date" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-top: 8px">
                <input asp-for="FilmModel.Duration" class="form-control" />
                <label asp-for="FilmModel.Duration"></label>
                <span asp-validation-for="FilmModel.Duration" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 8px">
                <label asp-for="FilmModel.File"></label>
                <input type="file" asp-for="FilmModel.File" class="form-control"/>
                <span asp-validation-for="FilmModel.File" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 8px">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}